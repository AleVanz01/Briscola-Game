<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        x:Class="Briscola.Login"
        xmlns:local="clr-namespace:Briscola"
        mc:Ignorable="d"
        Title="Login"
        Height="{Binding WindowHeight}"
        Top="{Binding WindowTop}"
        Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="DarkGreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0"
                Margin="10,10,0,0"
                HorizontalAlignment="Left"
                Background="LimeGreen"
                BorderBrush="LimeGreen"
                Foreground="Wheat"
                Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
                ToolTip="MaterialDesignFloatingActionDarkButton"
                Height="30"
                Width="31"
                Name="btnChiudi"
                Command="{Binding ChiudiCommand}"   >
            <materialDesign:PackIcon Kind="ArrowBack"
                                     Height="24"
                                     Width="24" />
        </Button>

        <Grid Grid.Row="1"
              Width="300"
              Name="grid">
            <StackPanel Name="stp" Height="auto">
                <Border Name="border"
                        VerticalAlignment="Center"
                        Background="WhiteSmoke"
                        Margin="20,30,20,20"
                        CornerRadius="15">
                    <StackPanel 
                                Name="stp1">
                        <StackPanel>
                            <AdornerDecorator>
                                <Border BorderBrush="Green"
                                        SnapsToDevicePixels="True"
                                        Padding="0 4 0 4"
                                        materialDesign:BottomDashedLineAdorner.Brush="Green">
                                    <TextBox BorderBrush="Green"
                                             Style="{StaticResource ResourceKey=TextBoxCustom}"
                                             Margin="20"
                                             Name="txtUsername"
                                             VerticalAlignment="Top"
                                             Height="40"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             VerticalScrollBarVisibility="Auto"
                                             LostFocus="txtUsername_LostFocus"
                                             Text="{Binding Giocatore.Username}"
                                             MaxLength="15">

                                        <materialDesign:HintAssist.Hint>
                                            <TextBlock Name="hintUsername"
                                                       Background="WhiteSmoke"
                                                       Foreground="LimeGreen">Username*</TextBlock>
                                        </materialDesign:HintAssist.Hint>
                                    </TextBox>
                                </Border>
                            </AdornerDecorator>
                        </StackPanel>
                        <StackPanel>
                            <PasswordBox Margin="20"
                                         Name="txtPsw"
                                         Background="WhiteSmoke"
                                         Style="{StaticResource ResourceKey=PasswordBoxCustom}"
                                         VerticalAlignment="Top"
                                         LostFocus="txtPsw_LostFocus"
                                         MaxLength="15">
                                <materialDesign:HintAssist.Hint>
                                    <TextBlock Name="hintPsw"
                                               Background="WhiteSmoke"
                                               Foreground="LimeGreen">Password*</TextBlock>
                                </materialDesign:HintAssist.Hint>
                            </PasswordBox>
                        </StackPanel>
                        <Label Content="* Campi Obbligatori"
                               Margin="15 0 0 0"
                               FontSize="10"
                               Height="23"
                               Foreground="Red" />
                        <StackPanel>
                            <CheckBox Name="chkRicordami"
                                      materialDesign:CheckBoxAssist.CheckBoxSize="22"
                                      Margin="15 5 0 0"
                                      IsChecked="False"
                                      Style="{StaticResource MaterialDesignDarkCheckBox}"
                                      Content="Ricordami"
                                      Background="LimeGreen" />
                        </StackPanel>
                        <StackPanel  Orientation="Horizontal"
                                     HorizontalAlignment="Center">
                            <Grid Name="stpLogin"
                                  Width="90"
                                  Margin="15 30 15 20">
                                <Button Style="{StaticResource MaterialDesignRaisedDarkButton}"
                                        Height="35"
                                        materialDesign:ButtonAssist.CornerRadius="15"
                                        ToolTip="MaterialDesignRaisedDarkButton with Round Corners"
                                        Name="btnLogin"
                                        Command="{Binding LoginCommand}"
                                        Background="LimeGreen"
                                        BorderBrush="Green">
                                    <TextBlock Name="txtLogin"
                                               Text="Login"
                                               Foreground="WhiteSmoke" />
                                </Button>
                            </Grid>
                        </StackPanel>
                        <StackPanel Name="stpRegistra"
                                    Orientation="Horizontal"
                                    Visibility="{Binding PanelRegistrazione}"
                                    HorizontalAlignment="Center">
                            <Label Content="Non sei ancora registrato?"
                                   Margin="0 2 0 0"
                                   FontSize="11"
                                   Width="136" />
                            <Button Margin="-16 -3 -15 0"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    ToolTip="MaterialDesignFlatButton"
                                    Content="Registrati"
                                    FontSize="12"
                                    x:Name="btnRegistra"
                                    Command="{Binding RegistraCommand}"
                                    Foreground="LimeGreen"
                                    Width="85" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
